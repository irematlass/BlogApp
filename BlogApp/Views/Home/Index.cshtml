@model IEnumerable<BlogApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>

<div class="row">
    <div class="col-md-8">
        @foreach (var item in Model)
        {
            <h3 class="page-header">
                @item.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @item.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="http://placehold.it/900x300" alt="" />
            <hr />
            <p>
                @item.Aciklama
            </p>
            @Html.ActionLink("Daha fazla...", "Details", "Blog", new { id = item.Id }, new { @class = "btn btn-primary" })

        }
    </div>
    <div class="col-md-4">
        @{Html.RenderAction("KategoriListesi", "Category");}
    </div>
</div>

